<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:clickable="true"
    tools:context=".ui.MainActivity">

    <TextView
        android:id="@+id/pomodoro_title_selected"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:background="@color/joystickBackground"
        android:layout_marginTop="30dp"
        android:text="@string/pomodoro_title"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        android:gravity="center"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/force_start_title_selected"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/pomodoro_title_unselected"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="@string/pomodoro_title"
        android:textColor="@color/grey_dark"
        android:textSize="25sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="@id/pomodoro_title_selected"
        app:layout_constraintTop_toTopOf="@id/pomodoro_title_selected"/>

    <TextView
        android:id="@+id/force_start_title_selected"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:background="@color/joystickBackground"
        android:layout_marginTop="30dp"
        android:text="@string/force_start_title"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@id/pomodoro_title_selected"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/force_start_title_unselected"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="@string/force_start_title"
        android:textColor="@color/grey_dark"
        android:textSize="25sp"
        android:textStyle="bold"
        android:gravity="center"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@+id/force_start_title_selected"
        app:layout_constraintTop_toTopOf="@id/force_start_title_selected"/>

    <TextView
        android:id="@+id/descriptorinator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/jump_start_your_brain"
        android:textSize="30sp"
        android:textStyle="italic"
        android:textColor="@color/white"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="70dp"
        app:layout_constraintTop_toBottomOf="@id/pomodoro_title_selected"/>

    <TextView
        android:id="@+id/study_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/min_2"
        android:textSize="60sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/descriptorinator"/>

    <Button
        android:id="@+id/timer_start_button"
        android:layout_width="120dp"
        android:layout_height="65dp"
        android:backgroundTint="@color/silver"
        android:text="@string/start"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/study_timer"/>

    <TextView
        android:id="@+id/cycles_left_descript"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cycles_left"
        android:textSize="25sp"
        android:textStyle="italic"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/timer_start_button"/>

    <ImageView
        android:id="@+id/timer_settings"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_settings"
        android:layout_marginEnd="10dp"
        android:visibility="invisible"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="@id/pomodoro_title_selected"
        app:layout_constraintTop_toBottomOf="@id/pomodoro_title_selected"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/haptic_1"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginBottom="120dp"
        android:background="@drawable/circle_button"
        android:hapticFeedbackEnabled="true"
        android:text="o.o"
        android:textSize="30sp"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/haptic_2"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/haptic_2"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:background="@drawable/circle_button"
        android:text="-_-"
        android:textSize="60sp"
        android:textColor="@color/white"
        android:hapticFeedbackEnabled="true"
        app:layout_constraintStart_toEndOf="@+id/haptic_1"
        app:layout_constraintEnd_toStartOf="@+id/haptic_3"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="120dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/haptic_3"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:background="@drawable/circle_button"
        android:text="{0_0}"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:hapticFeedbackEnabled="true"
        app:layout_constraintStart_toEndOf="@+id/haptic_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="120dp"/>

    <ImageButton
        android:id="@+id/play_button_break"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/play_button_border"
        android:src="@drawable/ic_game_ctrl"
        android:scaleType="centerCrop"
        android:padding="20dp"
        android:text="@string/dance"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/motivation_buttons_break"
        app:layout_constraintTop_toBottomOf="@+id/haptic_2"/>

    <LinearLayout
        android:id="@+id/motivation_buttons_break"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/haptic_2"
        app:layout_constraintEnd_toStartOf="@id/play_button_break">

        <Button
            android:id="@+id/good_cop_button_break"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:backgroundTint="@color/pastel_green"
            android:text="@string/good_cop"
            />

        <Button
            android:id="@+id/bad_cop_button_break"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:backgroundTint="@color/pastel_red"
            android:text="@string/bad_cop"
            />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/methodFragment_study"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/descriptorinator"/>

</androidx.constraintlayout.widget.ConstraintLayout>