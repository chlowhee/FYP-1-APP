<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:clickable="true"
    tools:context=".ui.MainActivity">

    <TextView
        android:id="@+id/pomodoro_title_selected"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:background="@color/joystickBackground"
        android:layout_marginTop="30dp"
        android:text="@string/pomodoro_title"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        android:gravity="center"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/force_start_title_selected"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/pomodoro_title_unselected"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="@string/pomodoro_title"
        android:textColor="@color/grey_dark"
        android:textSize="25sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="@id/pomodoro_title_selected"
        app:layout_constraintTop_toTopOf="@id/pomodoro_title_selected"/>

    <TextView
        android:id="@+id/force_start_title_selected"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:background="@color/joystickBackground"
        android:layout_marginTop="30dp"
        android:text="@string/force_start_title"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintStart_toEndOf="@id/pomodoro_title_selected"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/force_start_title_unselected"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="@string/force_start_title"
        android:textColor="@color/grey_dark"
        android:textSize="25sp"
        android:textStyle="bold"
        android:gravity="center"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="@+id/force_start_title_selected"
        app:layout_constraintTop_toTopOf="@id/force_start_title_selected"/>

    <TextView
        android:id="@+id/descriptorinator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/jump_start_your_brain"
        android:textSize="30sp"
        android:textStyle="italic"
        android:textColor="@color/white"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="70dp"
        app:layout_constraintTop_toBottomOf="@id/pomodoro_title_selected"/>

    <TextView
        android:id="@+id/study_timer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/min_2"
        android:textSize="60sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/descriptorinator"/>

    <Button
        android:id="@+id/timer_start_button"
        android:layout_width="120dp"
        android:layout_height="65dp"
        android:backgroundTint="@color/silver"
        android:text="@string/start"
        android:textColor="@color/black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/study_timer"/>

    <TextView
        android:id="@+id/cycles_left_descript"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cycles_left"
        android:textSize="25sp"
        android:textStyle="italic"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/timer_start_button"/>

    <ImageView
        android:id="@+id/timer_settings"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_settings"
        android:layout_marginEnd="10dp"
        android:visibility="invisible"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toStartOf="@id/pomodoro_title_selected"
        app:layout_constraintTop_toBottomOf="@id/pomodoro_title_selected"/>

    <Button
        android:id="@+id/force_star_tester"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:backgroundTint="@color/silver"
        android:text="START CAM"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/haptic_1"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <Button
        android:id="@+id/force_star_tester_2"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:backgroundTint="@color/silver"
        android:text="stop cam"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@+id/force_star_tester"
        app:layout_constraintBottom_toTopOf="@+id/force_star_tester"/>

    <Button
        android:id="@+id/haptic_1"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:backgroundTint="@color/red"
        android:background="@drawable/circle_button"
        android:text="HAP 1"
        android:hapticFeedbackEnabled="true"
        app:layout_constraintStart_toEndOf="@id/force_star_tester"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toBottomOf="parent"/>

